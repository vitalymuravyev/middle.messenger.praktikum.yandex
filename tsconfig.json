{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "paths": {
      "@components/*": ["./components/*"],
      "@core/*": ["./core/*"],
      "@pages/*": ["./pages/*"],
      "@utils/*": ["./utils/*"],
    }
  }
}
