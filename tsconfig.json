{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@components/*": ["components/*"],
      "@core/*": ["core/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
    }
  }
}
